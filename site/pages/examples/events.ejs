<!doctype html>
<html lang="en" class="has-navbar-fixed-top" data-section="events">

<head>
	<meta charset="utf-8">
	<meta name="viewport"
	  content="width=device-width, initial-scale=1">
	<title><%= htmlWebpackPlugin.options.title %></title>
	<%= htmlWebpackPlugin
			.tags
			.headTags
			.filter((tag) => tag.attributes.href?.startsWith('index'))
			.join('')
	%>
	<%= htmlWebpackPlugin
			.tags.headTags
			.filter((tag) => tag.attributes.src?.startsWith('index'))
			.join('')
	%>
</head>

<body>
	<%= partials.nav('events') %>
	<main>
		<section class="container">
			<header>
				<h1><%= examples.events.title %></h1>
				<p>
					<a href="<%= getExampleLink('events') %>">See example source</a>
				</p>				
				<%= texts['examples.events'] %>
			</header>
			<div class="columns">
				<figure class="column is-three-quarters fretboard-events" id="fretboard"></figure>
				<aside class="column aside">
					<button class="button is-small is-fullwidth" data-action="clear-fretboard"><%= examples.events.buttons.clear %></button>
				</aside>
			</div>
		</section>
	</main>
	<%= partials.footer() %>
	<%= htmlWebpackPlugin
		.tags
		.bodyTags
		.filter((tag) => tag.attributes.src.startsWith('index'))
		.join('')
	%>
</body>
</html>
