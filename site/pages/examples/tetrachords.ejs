<!doctype html>
<html lang="en" class="has-navbar-fixed-top" data-section="tetrachords">

<head>
	<meta charset="utf-8">
	<meta name="viewport"
	  content="width=device-width, initial-scale=1">
	<title><%= htmlWebpackPlugin.options.title %></title>
	<%= htmlWebpackPlugin
			.tags
			.headTags
			.filter((tag) => tag.attributes.href?.startsWith('index'))
			.join('')
	%>
	<%= htmlWebpackPlugin
			.tags.headTags
			.filter((tag) => tag.attributes.src?.startsWith('index'))
			.join('')
	%>
</head>

<body>
	<%= partials.nav('tetrachords') %>
	<main>
		<section class="container">
			<header>
				<h1><%= examples.tetrachords.title %></h1>
				<p>
					<a href="<%= getExampleLink('tetrachords') %>">See example source</a>
				</p>				
				<%= texts['examples.tetrachords'] %>
			</header>			
			<div class="columns">
				<figure class="column is-three-quarters" id="fretboard"></figure>
				<form class="column api-actions">
					<div class="field">
					  <div class="control">
					    <div class="select is-small">
					      <select name="upperTetrachordType">
									<option disabled selected>Select Upper Tetrachord...</option>
									<optgroup label="Common tetrachords">
						        <option value="Major">Major</option>
						        <option value="Minor">Minor</option>
						        <option value="Phrygian">Phrygian</option>
									</optgroup>
									<optgroup label="Exotic tetrachords">
						        <option value="Harmonic">Harmonic</option>
						        <option value="Lydian">Lydian</option>
									</optgroup>
					      </select>
					    </div>
					  </div>
					</div>

					<div class="field">
					  <div class="control">
					    <div class="select is-small">
					      <select name="upperTetrachordLayout">
									<option disabled selected>Select Upper Tetrachord Layout...</option>
						      <option value="0">Linear</option>
						      <option value="1">3 + 1</option>
						      <option value="2">2 + 2</option>
						      <option value="3">1 + 3</option>
					      </select>
					    </div>
					  </div>
					</div>

					<div class="field">
					  <div class="control">
					    <div class="select is-small">
					      <select name="lowerTetrachordType">
									<option disabled selected>Select Lower Tetrachord...</option>
									<optgroup label="Common tetrachords">
						        <option value="Major">Major</option>
						        <option value="Minor">Minor</option>
						        <option value="Phrygian">Phrygian</option>
									</optgroup>
									<optgroup label="Exotic tetrachords">
						        <option value="Harmonic">Harmonic</option>
						        <option value="Lydian">Lydian</option>
									</optgroup>
					      </select>
					    </div>
					  </div>
					</div>

					<div class="field">
					  <div class="control">
					    <div class="select is-small">
					      <select name="lowerTetrachordLayout">
									<option disabled selected>Select Lower Tetrachord Layout...</option>
						      <option value="0">Linear</option>
						      <option value="1">3 + 1</option>
						      <option value="2">2 + 2</option>
						      <option value="3">1 + 3</option>
					      </select>
					    </div>
					  </div>
					</div>

				</form>
			</div>
		</section>
	</main>
	<%= partials.footer() %>
	<%= htmlWebpackPlugin
		.tags
		.bodyTags
		.filter((tag) => tag.attributes.src.startsWith('index'))
		.join('')
	%>
</body>
</html>
