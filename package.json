{
    "name": "@Noah-Houghton/fretboard-visualizer",
    "version": "0.1.0",
    "description": "Fretboard visualizer",
    "homepage": "https://noah-houghton.github.io/fretboard-visualizer/",
    "main": "dist/fretboard-visualizer.cjs.js",
    "module": "dist/fretboard-visualizer.esm.js",
    "browser": "dist/fretboard-visualizer.umd.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/fretboard-visualizer.*.js",
        "dist/fretboard-visualizer.*.map",
        "dist/**/*.d.ts"
    ],
    "scripts": {
        "test": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' npx ava",
        "coverage": "nyc npm run test",
        "lint": "npx eslint ./src --ext .js,.jsx,.ts,.tsx",
        "start:dev": "rollup -c -w",
        "build:prod": "rollup -c",
        "site:dev": "webpack-dev-server --mode=development",
        "site:prod": "webpack --mode=production",
        "site:deploy": "npm run build:prod && npm run site:prod && gh-pages -d ./_site"
    },
    "keywords": [
        "music",
        "guitar",
        "fretboard",
        "svg"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/Noah-Houghton/fretboard-visualizer"
    },
    "author": "Noah Houghton <hello@noahhoughton.com>",
    "license": "ISC",
    "ava": {
        "require": [
            "esm"
        ],
        "files": [
            "src/**/*.test.ts"
        ],
        "extensions": {
            "ts": "module"
        },
        "nodeArguments": [
            "--import=tsimp"
        ]
    },
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^16.0.0",
        "@tonaljs/chord": "^4.5.1",
        "@types/d3-selection": "^1.4.1",
        "@types/throttle-debounce": "^2.1.0",
        "@typescript-eslint/eslint-plugin": "^8.19.1",
        "@typescript-eslint/parser": "^8.19.1",
        "abcjs": "^6.0.0-beta.24",
        "ava": "^6.2.0",
        "browser-env": "^2.0.31",
        "bulma": "^0.8.2",
        "copy-webpack-plugin": "^6.0.2",
        "css-loader": "^3.5.3",
        "eslint": "^9.18.0",
        "esm": "^3.2.25",
        "fs-extra": "^9.0.1",
        "gh-pages": "^6.3.0",
        "html-webpack-plugin": "^5.6.3",
        "lodash": "^4.17.15",
        "marked": "^15.0.6",
        "mini-css-extract-plugin": "^0.9.0",
        "node-sass-json-importer": "^4.3.0",
        "nyc": "^15.1.0",
        "prismjs": "^1.20.0",
        "rollup": "^4.30.1",
        "rollup-plugin-typescript2": "^0.36.0",
        "sass": "^1.29.0",
        "sass-loader": "^8.0.2",
        "style-loader": "^1.2.1",
        "ts-node": "^10.9.2",
        "tsimp": "^2.0.12",
        "tslib": "^2.8.1",
        "typescript": "^5.7.3",
        "webpack": "^5.97.1",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^5.2.0"
    },
    "dependencies": {
        "@ava/typescript": "^5.0.0",
        "@tonaljs/interval": "^4.5.1",
        "@tonaljs/mode": "^4.5.1",
        "@tonaljs/note": "^4.6.0",
        "@tonaljs/scale": "^4.6.0",
        "change-case": "^4.1.2",
        "d3-selection": "^1.4.1",
        "throttle-debounce": "^2.2.1"
    }
}
